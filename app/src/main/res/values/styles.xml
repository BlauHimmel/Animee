<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="Material_Display_4">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">112sp</item>
	</style>

	<style name="Material_Display_3">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">56sp</item>
	</style>

	<style name="Material_Display_2">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">45sp</item>
	</style>

	<style name="Material_Display_1">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">34sp</item>
	</style>

	<style name="Material_Headline">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#444</item>
	</style>

	<style name="Material_Title">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#555</item>
	</style>

	<style name="Material_Subhead">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#777</item>
	</style>

	<style name="Material_Body2">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Material_Body1">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Material_Caption">
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="Material_Button">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">14sp</item>
		<!-- <item name="android:textAllCaps">true</item> -->
	</style>

	<!-- ######################################################## -->
	<!-- #                        Image                         # -->
	<!-- ######################################################## -->

	<style name="Material_Card_Head_Image">
		<item name="android:layout_width">40dp</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:layout_marginTop">16dp</item>
		<item name="android:layout_marginBottom">16dp</item>
		<item name="android:layout_gravity">center_vertical</item>

		<item name="android:scaleType">centerCrop</item>
	</style>

	<style name="Material_Card_Rich_Media_Image">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>

		<item name="android:scaleType">centerCrop</item>
	</style>

	<!-- ######################################################## -->
	<!-- #                        Title                         # -->
	<!-- ######################################################## -->

	<style name="Material_Card_Title" parent="Material_Headline">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>

		<item name="android:gravity">center_vertical|left</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">12dp</item>
	</style>

	<style name="Material_Card_Title_Image" parent="Material_Card_Title">
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">6dp</item>
		<item name="android:textSize">14sp</item>
	</style>

	<!-- ######################################################## -->
	<!-- #                      Subtitle                        # -->
	<!-- ######################################################## -->

	<style name="Material_Card_Subtitle_24dp" parent="Material_Subhead">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>

		<item name="android:gravity">center_vertical|left</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:paddingBottom">24dp</item>
	</style>

	<style name="Material_Card_Subtitle_16dp" parent="Material_Card_Subtitle_24dp">
		<item name="android:paddingBottom">16dp</item>
	</style>

	<style name="Material_Card_Subtitle_Image" parent="Material_Card_Subtitle_16dp">
		<item name="android:textSize">14sp</item>
	</style>

	<!-- ######################################################## -->
	<!-- #                    Supporting Text                   # -->
	<!-- ######################################################## -->

	<!-- Should be used if there are no actions -->
	<style name="Material_Card_Supporting_Text_24dp" parent="Material_Body1">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>

		<item name="android:gravity">center_vertical|left</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:paddingBottom">24dp</item>
	</style>

	<!-- Should be used if there are additional actions or supporting text -->
	<style name="Material_Card_Supporting_Text_16dp" parent="Material_Card_Supporting_Text_24dp">
		<item name="android:paddingBottom">16dp</item>
	</style>

	<!-- ######################################################## -->
	<!-- #                        Others                        # -->
	<!-- ######################################################## -->

	<style name="Material_Card_View">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">6dp</item>
	</style>

	<style name="MainLayout">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="CardTitle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>

		<item name="android:textSize">24sp</item>

		<item name="android:gravity">bottom|left</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:paddingTop">24dp</item>
		<item name="android:paddingBottom">6dp</item>
	</style>

	<style name="CardSubtitle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>

		<item name="android:textSize">14sp</item>

		<item name="android:gravity">bottom|left</item>
		<item name="android:paddingTop">6dp</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:paddingBottom">16dp</item>
	</style>

	<style name="CardDescription">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">4dp</item>
		<item name="android:layout_marginBottom">4dp</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">24dp</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
	</style>

	<style name="Material_Action" parent="@style/Base.TextAppearance.AppCompat.Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">36dp</item>
		<item name="android:minWidth">88dp</item>
		<item name="android:padding">8dp</item>
		<item name="android:buttonStyle">@style/Base.Widget.AppCompat.Button</item>
		<item name="android:background">?attr/selectableItemBackground</item>
	</style>

	<style name="PrimaryButtonBaseStyle" parent="@style/Material_Action">
		<item name="android:textColor">@color/colorPrimary</item>
	</style>

</resources>
